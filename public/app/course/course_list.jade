.container.padding-top-med(ng-controller="CoursesController as courseCtrl")
   .pull-right
      form.form-inline
         .form-group
            input.form-control(ng-model="courseCtrl.searchText", placeholder="Filter")
         .form-group.margin-left-med
            select.form-control(ng-model="courseCtrl.sortOrder", ng-options="item.value as item.text for item in courseCtrl.sortOptions")
   table.table.table-hover.table-striped.table-condensed
      thead
         tr
            th Title
            th Publish Date
      tbody
         tr(ng-repeat="course in courseCtrl.courses | filter: courseCtrl.searchText | orderBy: courseCtrl.sortOrder")
            td
               a(href="/courses/{{course._id}}") {{course.title}}
            td {{course.published | date}}

