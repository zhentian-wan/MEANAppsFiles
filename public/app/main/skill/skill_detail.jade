.container(ng-controller="SkillDetailController as skillDetailCtrl")
   h1 {{'body.skills.skillDetail' | translate}}
   .row
      .col-md-6.col-sm-12
         h3(ng-show="skillDetailCtrl.skill.mastered || skillDetailCtrl.skill.know || skillDetailCtrl.skill.learning") {{::skillDetailCtrl.skill.title}}
         h3 Since {{skillDetailCtrl.skill.published | date: 'MM/yyyy'}}

      .col-md-6.col-sm-12
         .panel.panel-primary
            .panel-heading Tags
            .panel-body
               div(ng-repeat="tag in skillDetailCtrl.skill.tags") {{tag}}

