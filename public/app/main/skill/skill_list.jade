.container.padding-top-med(ng-controller="SkillsController as skillCtrl")
   .pull-right
      form.form-inline
         .form-group
            input.form-control(ng-model="skillCtrl.searchText", placeholder="Filter")
         .form-group.margin-left-med
            select.form-control(ng-model="skillCtrl.sortOrder", ng-options="item.value as item.text for item in skillCtrl.sortOptions")
   table.table.table-hover.table-striped.table-condensed
      thead
         tr
            th {{'form.title' | translate}}
            th {{'form.sinceDate' | translate}}
      tbody
         tr(ng-repeat="skill in skillCtrl.skills | filter: skillCtrl.searchText | orderBy: skillCtrl.sortOrder")
            td
               a(ui-sref="app.skills.skill-detail({id: skill._id})") {{skill.title}}
            td {{skill.published | date:'MM/yyyy'}}

