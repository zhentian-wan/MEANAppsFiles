#experience(ng-controller="ExperienceController as expCtrl")
   .container
      .row.text-center
         .col-md-12
            h1.section_h1 {{'body.experience' | translate}}
         .col-md-8.col-md-offset-2.col-sm-10.col-sm-offset-1
            p.section_p {{'body.experienceDesc' | translate}}
   section#cd-timeline.cd-container
      .cd-timeline-block(ng-repeat="exp in expCtrl.experiences | orderBy: '-startDate'")
         .cd-timeline-img.cd-grey
            img(ng-src='../images/{{exp.image}}', alt='Make')
         .cd-timeline-content
            h2 {{exp.title}}
            h6 @ {{exp.company}}
            p
               | {{exp.description}}
            span.cd-date {{exp.startDate | date: 'MM/yyyy'}} - {{exp.isEnd ? (exp.endDate | date: 'MM/yyyy'): 'Present'}}

