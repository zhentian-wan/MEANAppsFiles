body
  padding-top 61px
  background url(../images/bg2.png) center top

.jumbotron
  margin-top 30px
  position relative
  color #d7e0e2
  background-color rgba(0,0,0,0.6)
  max-height 286px

.jumbotron::after
  content ""
  background url(../images/bg.png) center top
  top 0
  left 0
  bottom 0
  right 0
  position absolute
  z-index -1

.label
  margin-left 5px

blockquote
  border-left 5px solid #18BC9C

.navbar-header a.navbar-brand
  margin-top -15px
  margin-bottom -20px
  h6
    color #ccc

.category-nav
  overflow hidden
  width 100%

.category-nav span
  float left

.category-nav .label
  margin-top 5px

.navbar-form
  .form-group
    margin-left 10px
  button
    margin-left 10px

.toast-top-right
  top 70px

.toast-success
  background-color #13987e

.margin-left-med
  margin-left 10px

.padding-top-med
  padding-top 10px

.glyphicon
  top 0

form
  margin-top 20px
  margin 0 auto

footer
  padding-left 15px
  padding-right 15px
  p
    border-top: #d7e0e2 1px solid

